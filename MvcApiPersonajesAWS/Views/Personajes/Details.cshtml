@model int

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Personaje</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            IdPersonaje
        </dt>
        <dd class="col-sm-10" id="idPersonaje"></dd>
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10" id="nombre"></dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            <img id="imagen" src="" style="width: 150px;" alt="Personaje Image" />
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model }) |
    <a asp-action="Listado">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            console.log("david");
            $.get("https://3.95.66.174/api/Personajes/GetPersonaje/" + @Model, function (data) {
                console.log("david1");
                $("#idPersonaje").text(data.idPersonaje);
                $("#nombre").text(data.nombre);
                $("#imagen").attr("src", data.imagen);
            });
        });
    </script>
}
